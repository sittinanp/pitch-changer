generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model account {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username         String   @unique
  email            String   @unique
  password         String   @db.VarChar(255)
  created_by       String   @default("system")
  create_date_time DateTime @default(now())
  updated_by       String   @default("system")
  update_date_time DateTime @default(now())

  refreshTokens    acct_refresh_token[]
}

model acct_refresh_token {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  account_id        String   @db.Uuid
  token_hash        String   @db.VarChar(255)
  replaced_by_token String?  @db.VarChar(255)
  revoked           Boolean  @default(false)
  ip_address        String?  @db.VarChar(50)
  user_agent        String?  @db.VarChar(255)
  expires_at        DateTime
  created_at        DateTime @default(now())
  account           account  @relation(fields: [account_id], references: [id], onDelete: Cascade)
  @@index([account_id])
  @@index([token_hash])
}